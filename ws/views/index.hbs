{{!-- 
    Invisible dummy frame to redirect response answer 
    to this to don't reload the page after request.
--}}
<iframe style="display: none" name="dummyframe" id="dummyframe"></iframe>

<h1>This is a Test
    <br>
     {{ servername }} 
</h1>
<form action="/sendMessage" method="POST" target="dummyframe" >
  <div class="row">
      {{!-- Pass token back to authenticate web request --}}
    <input type="hidden" name="token" value="{{ token }}" />
    <div class="col">
      <select name="channelid" class="form-control" >
        {{#each chans}}
            <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>
    </div>
    <div class="col">
      {{!-- Message text input --}}
    <input type="text" name="text" class="form-control" placeholder="text">
    </div>
    <div class="col">
        {{!-- Send button --}}
    <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
